extends layout

block content

  h1 Control Panel
  h3 Teams
  .teams__flexbox
    label.teams__label(for='country1') Team 1
    input.teams__input(type='text', name='country1')
    a.sbmtbutton(href='#') submit
  .teams__flexbox
    label.teams__label(for='country2') Team 2
    input.teams__input(type='text', name='country2')
    a.sbmtbutton(href='#') submit
  .space  
  h3 Score
  .controls
    h4.controls__team Team 1
    a.controls__min.minscore__team1(href='#') -
    p.controls__aantal 0
    a.controls__plus.plusscore__team1(href='#') +
  .controls
    h4.controls__team Team 2
    a.controls__min.minscore__team2(href='#') -
    p.controls__aantal 0
    a.controls__plus.plusscore__team2(href='#') +
  .space  
  h3 Total shots
  .controls
    h4.controls__team Team 1
    a.controls__min.minshots__team1(href='#') -
    p.controls__aantal 0
    a.controls__plus.plusshots__team1(href='#') +
  .controls
    h4.controls__team Team 2
    a.controls__min.minshots__team2(href='#') -
    p.controls__aantal 0
    a.controls__plus.plusshots__team2(href='#') +
  .space  
  h3 Fouls
  .controls
    h4.controls__team Team 1
    a.controls__min.minfouls__team1(href='#') -
    p.controls__aantal 0
    a.controls__plus.plusfouls__team1(href='#') +
  .controls
    h4.controls__team Team 2
    a.controls__min.minfouls__team2(href='#') -
    p.controls__aantal 0
    a.controls__plus.plusfouls__team2(href='#') +
  .space  
  h3 Live Updates
  .updates__flexbox
    input.updates__input(type='text', name='updates')
    a.sbmtbutton(href='#') submit